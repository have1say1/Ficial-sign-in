<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
    android:orientation="vertical"
    tools:context=".activities.MeetingActivity">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="60%w"
        android:background="@drawable/meeting_detail"
        android:orientation="vertical">
    
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="10%h"
            app:layout_widthPercent="10%h"
            app:layout_marginLeftPercent="5%h"
            app:layout_marginTopPercent="5%h"
            app:srcCompat="@drawable/back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="移动应用开发"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_heightPercent="20%h"
            app:layout_marginTopPercent="5%h"/>
    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="2019.12.11 12:31"
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_heightPercent="10%h"/>
    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:paddingRight="20dp"
            android:text="8:30-11:30"
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_heightPercent="40%h" />
    
    
    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="32%w">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_widthPercent="42.5%w"
            app:layout_heightPercent="22%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_marginTopPercent="8%w"
            app:cardBackgroundColor="@android:color/background_light"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/daka_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:onClick="onClickDaka">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/dakanote"
                    app:layout_heightPercent="40%h"
                    app:layout_widthPercent="40%h" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="打卡记录"
                    android:textSize="18sp" />
            </com.zhy.android.percent.support.PercentLinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_widthPercent="42.5%w"
            app:layout_heightPercent="22%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_marginTopPercent="8%w"
            app:cardBackgroundColor="@android:color/background_light"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/daka_static"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:onClick="onClickDaka">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/dakastatic"
                    app:layout_heightPercent="30%h"
                    app:layout_widthPercent="30%h" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="打卡统计"
                    android:textSize="18sp" />
            </com.zhy.android.percent.support.PercentLinearLayout>

        </android.support.v7.widget.CardView>
        
    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="32%w">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_widthPercent="42.5%w"
            app:layout_heightPercent="22%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_marginTopPercent="3%w"
            app:cardBackgroundColor="@android:color/background_light"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/daka_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:onClick="onClickDaka">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/dakashare"
                    app:layout_heightPercent="30%h"
                    app:layout_widthPercent="30%h" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="会议分享"
                    android:textSize="18sp" />
            </com.zhy.android.percent.support.PercentLinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_widthPercent="42.5%w"
            app:layout_heightPercent="22%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_marginTopPercent="3%w"
            app:cardBackgroundColor="@android:color/background_light"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/daka_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:onClick="onClickDaka">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/dakasetting"
                    app:layout_heightPercent="30%h"
                    app:layout_widthPercent="30%h" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="会议详情"
                    android:textSize="18sp" />
            </com.zhy.android.percent.support.PercentLinearLayout>

        </android.support.v7.widget.CardView>

    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="50%w"
        android:gravity="center_horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="30dp"
            app:cardElevation="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:text="签到 "/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cam"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="40dp"
            android:onClick="onClickDaka"
            app:cardBackgroundColor="@color/yellow"
            app:cardCornerRadius="60dp"
            app:cardElevation="15dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/shuaface2" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:text="签出"/>

        </android.support.v7.widget.CardView>

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>