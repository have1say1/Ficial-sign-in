<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.air.facial_sign_in.activities.GroupInfoActivity">


    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/cardview_light_background"
            app:layout_heightPercent="15%w"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/blk_back"
                android:onClick="onClickBack"
                app:layout_marginLeftPercent="5%w"
                app:layout_widthPercent="4%w" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="会议信息"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20sp"
                app:layout_widthPercent="78%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_heightPercent="50%w">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:src="@drawable/groupbg"
                app:layout_heightPercent="62%w" />

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_marginLeftPercent="8%w">

                <com.zhy.android.percent.support.PercentFrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="30%w">

                    <TextView
                        android:id="@+id/group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:layout_marginTopPercent="3%h" />
                </com.zhy.android.percent.support.PercentFrameLayout>

            </com.zhy.android.percent.support.PercentLinearLayout>


        </com.zhy.android.percent.support.PercentFrameLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            app:layout_heightPercent="8%w"
            app:layout_marginLeftPercent="0%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/entermemberlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:onClick="onClick"
                app:layout_heightPercent="8%w"
                app:layout_marginLeftPercent="4%w">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会议成员"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    app:layout_widthPercent="25%w"
                    android:layout_gravity="right|center_vertical"/>

                <com.zhy.android.percent.support.PercentFrameLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="66%w"
                    app:layout_marginTopPercent="4%h">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:text="共4人"
                        android:textSize="16sp"
                        android:visibility="invisible" />
                </com.zhy.android.percent.support.PercentFrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/jiantou"
                    app:layout_marginLeftPercent="1%w"
                    app:layout_heightPercent="55%h"
                    android:layout_gravity="center_vertical"/>

            </com.zhy.android.percent.support.PercentLinearLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>


        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            app:layout_heightPercent="20%w"
            app:layout_marginLeftPercent="0%w">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="18dp"
                android:src="@drawable/tx4"
                app:layout_heightPercent="16%w"
                app:layout_widthPercent="16%w" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:src="@drawable/tx1"
                app:layout_heightPercent="16%w"
                app:layout_widthPercent="16%w" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:src="@drawable/tx3"
                app:layout_heightPercent="16%w"
                app:layout_widthPercent="16%w" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:src="@drawable/tx5"
                app:layout_heightPercent="16%w"
                app:layout_widthPercent="16%w" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView5"
                android:onClick="onClick"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:src="@drawable/type_select_btn_nor"
                app:layout_heightPercent="16%w"
                app:layout_widthPercent="16%w" />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:layout_marginBottom="3dp"
            app:layout_heightPercent="15%w">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="会议名称"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                app:layout_marginLeftPercent="4%w"
                app:layout_marginTopPercent="5%w"
                app:layout_widthPercent="20%w" />
            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="69%w">

                <TextView
                    android:id="@+id/group_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical" />
            </com.zhy.android.percent.support.PercentFrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/jiantou"
                app:layout_marginLeftPercent="1%w"
                app:layout_heightPercent="30%h"
                android:layout_gravity="center_vertical"/>
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:layout_marginBottom="3dp"
            app:layout_heightPercent="15%w">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="时间"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                app:layout_marginLeftPercent="4%w"
                app:layout_marginTopPercent="5%w"
                app:layout_widthPercent="20%w" />
            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="69%w">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:text="8:30-11:30" />
            </com.zhy.android.percent.support.PercentFrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/jiantou"
                app:layout_marginLeftPercent="1%w"
                app:layout_heightPercent="30%h"
                android:layout_gravity="center_vertical"/>
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:layout_marginBottom="3dp"
            app:layout_heightPercent="15%w">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="地址"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                app:layout_marginLeftPercent="4%w"
                app:layout_marginTopPercent="5%w"
                app:layout_widthPercent="20%w" />
            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="69%w">

                <TextView
                    android:id="@+id/group_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:text="中航广场字节跳动总部"/>
            </com.zhy.android.percent.support.PercentFrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/jiantou"
                app:layout_marginLeftPercent="1%w"
                app:layout_heightPercent="30%h"
                android:layout_gravity="center_vertical"/>
        </com.zhy.android.percent.support.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:layout_marginBottom="3dp"
            app:layout_heightPercent="15%w">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="签到方式"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                app:layout_marginLeftPercent="4%w"
                app:layout_marginTopPercent="5%w"
                app:layout_widthPercent="20%w" />
            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="69%w">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:text="每周" />
            </com.zhy.android.percent.support.PercentFrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/jiantou"
                app:layout_marginLeftPercent="1%w"
                app:layout_heightPercent="30%h"
                android:layout_gravity="center_vertical"/>
        </com.zhy.android.percent.support.PercentLinearLayout>


    </com.zhy.android.percent.support.PercentLinearLayout>
</android.support.constraint.ConstraintLayout>
