<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.air.facial_sign_in.activities.MemberListActivity">

    <com.zhy.android.percent.support.PercentFrameLayout
        android:id="@+id/memberlist_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                app:layout_heightPercent="15%w"
                android:layout_marginBottom="7dp">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:onClick="onClickBack"
                    android:src="@drawable/blk_back"
                    app:layout_marginLeftPercent="5%w"
                    app:layout_widthPercent="4%w" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="全部成员"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20sp"
                    app:layout_widthPercent="80%w" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="5%w"
                    app:layout_widthPercent="7%w" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/note_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/member1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        app:layout_heightPercent="22%w">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:src="@drawable/touxiang2"
                            app:layout_heightPercent="16%w"
                            app:layout_marginLeftPercent="6%w"
                            app:layout_marginTopPercent="3%w"
                            app:layout_widthPercent="16%w">
                        </de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="张大柱"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_marginLeftPercent="20%h"
                            app:layout_marginTopPercent="35%h" />

                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/member2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        app:layout_heightPercent="22%w">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:src="@drawable/touxiang"
                            app:layout_heightPercent="16%w"
                            app:layout_marginLeftPercent="6%w"
                            app:layout_marginTopPercent="3%w"
                            app:layout_widthPercent="16%w">
                        </de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="张二柱"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_marginLeftPercent="20%h"
                            app:layout_marginTopPercent="35%h" />

                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/member3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        app:layout_heightPercent="22%w">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:src="@drawable/qiao"
                            app:layout_heightPercent="16%w"
                            app:layout_marginLeftPercent="6%w"
                            app:layout_marginTopPercent="3%w"
                            app:layout_widthPercent="16%w">
                        </de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="张老三"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_marginLeftPercent="20%h"
                            app:layout_marginTopPercent="35%h" />

                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/member4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        app:layout_heightPercent="22%w">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:src="@drawable/db"
                            app:layout_heightPercent="16%w"
                            app:layout_marginLeftPercent="6%w"
                            app:layout_marginTopPercent="3%w"
                            app:layout_widthPercent="16%w">
                        </de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="张小弟"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_marginLeftPercent="20%h"
                            app:layout_marginTopPercent="35%h" />

                    </com.zhy.android.percent.support.PercentLinearLayout>

                </com.zhy.android.percent.support.PercentLinearLayout>


            </ScrollView>
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentFrameLayout>
</android.support.constraint.ConstraintLayout>
