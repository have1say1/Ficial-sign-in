<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.air.facial_sign_in.activities.ShareActivity">

    <com.zhy.android.percent.support.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#282828"
        android:orientation="vertical">


        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/recw"
            android:orientation="vertical"
            android:padding="25dp"
            app:layout_heightPercent="110%w"
            app:layout_widthPercent="80%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GROUP NAME"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ren" />
            </com.zhy.android.percent.support.PercentLinearLayout>


            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                app:layout_heightPercent="70%w">

                <ImageView
                    android:id="@+id/imgcontainer"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="100%h" />


            </com.zhy.android.percent.support.PercentFrameLayout>

            <TextView
                android:id="@+id/group_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/yellow"
                android:textSize="36sp" />




        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal"
            app:layout_heightPercent="15%w">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:onClick="onClickBack"
                android:src="@drawable/blk_back"
                app:layout_marginLeftPercent="5%w"
                app:layout_widthPercent="4%w" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/cardview_dark_background"
                android:text="分享"
                android:textSize="20sp"
                app:layout_widthPercent="80%w" />
            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/pass_more"
                android:clickable="true"
                android:onClick="onClick"
                app:layout_widthPercent="12%w">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/blk_more"
                    app:layout_heightPercent="50%h"
                    app:layout_marginLeftPercent="30%w" />
            </com.zhy.android.percent.support.PercentFrameLayout>


        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentFrameLayout>
</android.support.constraint.ConstraintLayout>
