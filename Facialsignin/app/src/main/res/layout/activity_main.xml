<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.air.facial_sign_in.activities.MainActivity">

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程信息"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打卡方式"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv2" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="10dp"
        android:orientation="vertical"
        android:background="@android:color/background_light"
        app:layout_heightPercent="20%h">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="62.5%h">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="会议"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_marginLeftPercent="5%w"
                app:layout_marginTopPercent="25%h"
                app:layout_widthPercent="15%w" />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="60%w" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="10%w">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="?android:attr/actionModeWebSearchDrawable" />
            </FrameLayout>
            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="10%w" >

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_widthPercent="50%w"
                    app:layout_heightPercent="50%w"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/plus" />
            </com.zhy.android.percent.support.PercentFrameLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="37.5%h">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                app:layout_marginLeftPercent="5%w"
                app:layout_marginTopPercent="1%w"
                app:layout_widthPercent="10%w">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="参与"
                    android:textColor="@android:color/background_dark" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                app:layout_marginLeftPercent="2%w"
                app:layout_marginTopPercent="1%w"
                app:layout_widthPercent="10%w"
                app:cardBackgroundColor="@color/yellow">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="管理"
                    android:textColor="@android:color/background_dark" />
            </android.support.v7.widget.CardView>


        </com.zhy.android.percent.support.PercentLinearLayout>



    </com.zhy.android.percent.support.PercentLinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="70%h">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="0dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/meeting"
                app:cardBackgroundColor="@android:color/background_light"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_heightPercent="48%w"
                app:layout_widthPercent="90%w">


                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/meeting"
                        app:layout_heightPercent="34.3%w"
                        app:layout_widthPercent="100%w" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="移动应用开发"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_heightPercent="20%h" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:paddingLeft="10dp"
                        app:layout_heightPercent="10%h">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/person" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:layout_marginLeft="5dp"
                            android:text="16"
                            android:textColor="@color/grey"
                            android:textSize="11sp" />
                    </LinearLayout>
                </com.zhy.android.percent.support.PercentLinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/meeting"
                app:cardBackgroundColor="@android:color/background_light"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_heightPercent="48%w"
                app:layout_widthPercent="90%w">


                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/meeting2"
                        app:layout_heightPercent="34.3%w"
                        app:layout_widthPercent="100%w" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="字节跳动"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_heightPercent="20%h" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:paddingLeft="10dp"
                        app:layout_heightPercent="10%h">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/person" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:layout_marginLeft="5dp"
                            android:text="100"
                            android:textColor="@color/grey"
                            android:textSize="11sp" />
                    </LinearLayout>
                </com.zhy.android.percent.support.PercentLinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/meeting"
                app:cardBackgroundColor="@android:color/background_light"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_heightPercent="48%w"
                app:layout_widthPercent="90%w">


                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/db"
                        app:layout_heightPercent="34.3%w"
                        app:layout_widthPercent="100%w" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="JAVA开发"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_heightPercent="20%h" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:paddingLeft="10dp"
                        app:layout_heightPercent="10%h">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/person" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:layout_marginLeft="5dp"
                            android:text="16"
                            android:textColor="@color/grey"
                            android:textSize="11sp" />
                    </LinearLayout>
                </com.zhy.android.percent.support.PercentLinearLayout>


            </android.support.v7.widget.CardView>

        </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="20dp"
        app:layout_heightPercent="10%h"
        android:background="@android:color/background_light">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_widthPercent="33.3%w"
            android:gravity="center">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/shuaface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到"
                android:textColor="@color/grey"
                android:id="@+id/sigin"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_widthPercent="33.3%w"
            android:gravity="center">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/msg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textColor="@color/grey"
                android:id="@+id/message"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_widthPercent="33.3%w"
            android:gravity="center">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/my"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="@color/grey"
                android:id="@+id/my"/>

        </LinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>