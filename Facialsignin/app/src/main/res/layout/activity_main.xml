<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.air.facial_sign_in.activities.MainActivity">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="10dp"
        android:orientation="vertical"
        android:background="@android:color/background_light"
        app:layout_heightPercent="20%h">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="62.5%h">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="会议"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_marginLeftPercent="5%w"
                app:layout_marginTopPercent="25%h"
                app:layout_widthPercent="15%w" />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="60%w" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="10%w">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="?android:attr/actionModeWebSearchDrawable" />
            </FrameLayout>
            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="10%w" >

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/add_meeting"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:onClick="onClickAdd"
                    android:src="@drawable/plus"
                    app:layout_heightPercent="50%w"
                    app:layout_widthPercent="50%w" />
            </com.zhy.android.percent.support.PercentFrameLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="37.5%h">
            <android.support.v7.widget.CardView
                android:id="@+id/meeting_joinList"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                app:layout_marginLeftPercent="5%w"
                app:layout_marginTopPercent="1%w"
                app:layout_widthPercent="10%w"
                app:cardBackgroundColor="@color/yellow"
                android:onClick="onClickList">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="参与"
                    android:textColor="@android:color/background_dark" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/meeting_manageList"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                app:layout_marginLeftPercent="2%w"
                app:layout_marginTopPercent="1%w"
                app:layout_widthPercent="10%w"

                android:onClick="onClickList">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="管理"
                    android:textColor="@android:color/background_dark" />
            </android.support.v7.widget.CardView>


        </com.zhy.android.percent.support.PercentLinearLayout>



    </com.zhy.android.percent.support.PercentLinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/meeting_containner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="70%h">


    </android.support.v7.widget.RecyclerView>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="20dp"
        app:layout_heightPercent="10%h"
        android:layout_gravity="bottom"
        android:background="@android:color/background_light">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="onClickBar"
            android:orientation="vertical"
            app:layout_widthPercent="33.3%w"
            android:id="@+id/sigin">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/shuaface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到"
                android:textColor="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="onClickBar"
            android:orientation="vertical"
            app:layout_widthPercent="33.3%w">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textColor="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="onClickBar"
            android:orientation="vertical"
            app:layout_widthPercent="33.3%w">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/my" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="@color/grey" />

        </LinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>