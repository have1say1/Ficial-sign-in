<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.air.facial_sign_in.activities.UserDetailActivity">
    <com.zhy.android.percent.support.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_heightPercent="38%w">


                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_marginLeftPercent="5%w">

                    <com.zhy.android.percent.support.PercentFrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_marginTopPercent="10%w"
                        app:layout_marginLeftPercent="2%w">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:src="@drawable/default_ava"
                            android:id="@+id/circleImageView2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:layout_heightPercent="20%w"
                            app:layout_widthPercent="20%w" />

                    </com.zhy.android.percent.support.PercentFrameLayout>

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_marginTopPercent="10%w"
                        app:layout_marginLeftPercent="5%w"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp"
                            app:layout_marginLeftPercent="2%w"
                            app:layout_marginTopPercent="10%h" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="简介：暂无简介"
                            android:textColor="@color/darkgrey"
                            android:textSize="14sp"
                            app:layout_marginLeftPercent="2%w"
                            app:layout_marginTopPercent="5%h" />

                    </com.zhy.android.percent.support.PercentLinearLayout>

                </com.zhy.android.percent.support.PercentLinearLayout>

            </com.zhy.android.percent.support.PercentFrameLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/update_face"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                app:layout_heightPercent="15%w">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/myphoto"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_heightPercent="80%h"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|center_horizontal"
                    android:text="照片更新"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="16sp"
                    app:layout_marginLeftPercent="4%w"
                    app:layout_marginTopPercent="0%w"
                    app:layout_widthPercent="20%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/manage_kaoqin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                app:layout_heightPercent="15%w">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/mymanage"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_heightPercent="80%h"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|center_horizontal"
                    android:text="考勤管理"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="16sp"
                    app:layout_marginLeftPercent="4%w"
                    app:layout_marginTopPercent="0%w"
                    app:layout_widthPercent="20%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/my_info"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                app:layout_heightPercent="15%w">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/myinfo"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_heightPercent="80%h"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|center_horizontal"
                    android:text="个人资料"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="16sp"
                    app:layout_marginLeftPercent="4%w"
                    app:layout_marginTopPercent="0%w"
                    app:layout_widthPercent="20%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>



            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/my_settings"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                app:layout_heightPercent="15%w">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/mysetting"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_heightPercent="80%h"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|center_horizontal"
                    android:text="个人设置"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="16sp"
                    app:layout_marginLeftPercent="4%w"
                    app:layout_marginTopPercent="0%w"
                    app:layout_widthPercent="20%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>





        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="20dp"
            app:layout_heightPercent="10%h"
            android:layout_gravity="bottom"
            android:background="@android:color/background_light">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="onClickBar"
                android:orientation="vertical"
                app:layout_widthPercent="33.3%w"
                android:id="@+id/sigin">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/shuaface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签到"
                    android:textColor="@color/grey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="onClickBar"
                android:orientation="vertical"
                app:layout_widthPercent="33.3%w">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/msg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息"
                    android:textColor="@color/grey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/my"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="onClickBar"
                android:orientation="vertical"
                app:layout_widthPercent="33.3%w">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/my" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textColor="@color/grey" />

            </LinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentFrameLayout>

</android.support.constraint.ConstraintLayout>
