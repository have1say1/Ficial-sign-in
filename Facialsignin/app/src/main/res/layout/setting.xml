<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorBackground">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_heightPercent="15%w"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back"
            android:onClick="onClickBack"
            app:layout_marginLeftPercent="5%w"
            app:layout_widthPercent="4%w" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="个人设置"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:layout_widthPercent="78%w" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/more"
            app:layout_marginRightPercent="5%w"
            app:layout_widthPercent="7%w" />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_heightPercent="6%w">
            </com.zhy.android.percent.support.PercentFrameLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                app:layout_heightPercent="15%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="人脸"
                    android:textColor="@color/colorPrimary"
                    app:layout_marginLeftPercent="5%w"
                    app:layout_marginTopPercent="5%w"
                    app:layout_widthPercent="20%w" />
                <com.zhy.android.percent.support.PercentFrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="68%w">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/touxiang"
                        app:layout_heightPercent="19%w"
                        app:layout_widthPercent="19%w" />
                </com.zhy.android.percent.support.PercentFrameLayout>

                <com.zhy.android.percent.support.PercentFrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </com.zhy.android.percent.support.PercentFrameLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/jiantou"
                    app:layout_marginLeftPercent="1%w"
                    app:layout_heightPercent="30%h"
                    android:layout_gravity="center_vertical"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                app:layout_heightPercent="15%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="手机号"
                    android:textColor="@color/colorPrimary"
                    app:layout_marginLeftPercent="5%w"
                    app:layout_marginTopPercent="5%w"
                    app:layout_widthPercent="20%w" />
                <com.zhy.android.percent.support.PercentFrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="68%w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:text="1563142xxxx" />
                </com.zhy.android.percent.support.PercentFrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/jiantou"
                    app:layout_marginLeftPercent="1%w"
                    app:layout_heightPercent="30%h"
                    android:layout_gravity="center_vertical"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                app:layout_heightPercent="15%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="姓名"
                    android:textColor="@color/colorPrimary"
                    app:layout_marginLeftPercent="5%w"
                    app:layout_marginTopPercent="5%w"
                    app:layout_widthPercent="20%w" />
                <com.zhy.android.percent.support.PercentFrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="68%w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:text="王大柱" />
                </com.zhy.android.percent.support.PercentFrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/jiantou"
                    app:layout_marginLeftPercent="1%w"
                    app:layout_heightPercent="30%h"
                    android:layout_gravity="center_vertical"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                app:layout_heightPercent="15%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="性别"
                    android:textColor="@color/colorPrimary"
                    app:layout_marginLeftPercent="5%w"
                    app:layout_marginTopPercent="5%w"
                    app:layout_widthPercent="20%w" />
                <com.zhy.android.percent.support.PercentFrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="68%w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:text="男" />
                </com.zhy.android.percent.support.PercentFrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/jiantou"
                    app:layout_marginLeftPercent="1%w"
                    app:layout_heightPercent="30%h"
                    android:layout_gravity="center_vertical"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                app:layout_heightPercent="15%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="公司/组织"
                    android:textColor="@color/colorPrimary"
                    app:layout_marginLeftPercent="5%w"
                    app:layout_marginTopPercent="5%w"
                    app:layout_widthPercent="20%w" />
                <com.zhy.android.percent.support.PercentFrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="68%w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:text="北京大学软件与微电子学院" />
                </com.zhy.android.percent.support.PercentFrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/jiantou"
                    app:layout_marginLeftPercent="1%w"
                    app:layout_heightPercent="30%h"
                    android:layout_gravity="center_vertical"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                app:layout_heightPercent="15%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="修改密码"
                    android:textColor="@color/colorPrimary"
                    app:layout_marginLeftPercent="5%w"
                    app:layout_marginTopPercent="5%w"
                    app:layout_widthPercent="20%w" />
                <com.zhy.android.percent.support.PercentFrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="68%w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:text="******" />
                </com.zhy.android.percent.support.PercentFrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/jiantou"
                    app:layout_marginLeftPercent="1%w"
                    app:layout_heightPercent="30%h"
                    android:layout_gravity="center_vertical"/>
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="15%w"
                app:layout_marginTopPercent="35%w">

                <com.zhy.android.percent.support.PercentFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/rec"
                    app:layout_heightPercent="90%h"
                    app:layout_widthPercent="80%w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="退出登录"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </com.zhy.android.percent.support.PercentFrameLayout>

            </com.zhy.android.percent.support.PercentFrameLayout>
            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="15%w"
                app:layout_marginTopPercent="3%w"/>

        </com.zhy.android.percent.support.PercentLinearLayout>


    </ScrollView>
</com.zhy.android.percent.support.PercentLinearLayout>